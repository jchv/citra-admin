@import url(http://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic);

html, body
  height: 100%
  margin: 0
  padding: 0
  font-family: lato, sans-serif

body
  display: flex
  flex-direction: column

#header
  flex: 0 0 50px
  background: #2da3dd

#citra-logo
  position: absolute
  background: url(images/citra-header.png)
  background-size: 100%
  width: 62.5px
  height: 25px
  margin: 12.5px

#container
  display: flex
  flex-direction: row
  flex: 1

#sidebar
  flex: 0 0 200px

  ul
    list-style: none
    margin: 0
    padding: 0
    li
      line-height: 40px
      a
        color: inherit
      a:hover
        color: #aaa
      a:link
        text-decoration: none

  ul.menu>li
    line-height: 25px
    margin: 10px 0
    padding-left: 20px
    border-bottom: 1px solid #eee
    span
      font-size: 60%
      text-transform: uppercase


#content
  background-color: #eee
  flex: 1
  overflow-y: auto
  overflow-x: hidden
  padding: 20px
